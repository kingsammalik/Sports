<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <FrameLayout
        android:layout_marginTop="10dp"
    android:id="@+id/frame_lay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/date"
            android:text="11 May 2017"
            android:textSize="17sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem" />
        <TextView
            android:id="@+id/venue"
            android:text="Nehru Stadium"
            android:textSize="13sp"
            android:textColor="@android:color/darker_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="50sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/team1logo"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/basketball2"/>

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/team1name"
                android:textSize="10sp"
                android:inputType="textMultiLine"
                android:text="Manchester United"
                android:textColor="@android:color/darker_gray"
                android:layout_width="68sp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:textAppearance="?attr/textAppearanceListItem" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30sp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/score1"
                android:text="257/9"
                android:textSize="15sp"
                android:textColor="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceListItem" />
            <TextView
                android:id="@+id/over1"
                android:text="50.0"
                android:textSize="13sp"
                android:textColor="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceListItem" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="30sp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/score2"
                android:text="257/9"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceListItem" />
            <TextView
                android:id="@+id/over2"
                android:text="50.0"
                android:textSize="13sp"
                android:textColor="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceListItem" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="50sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/team2logo"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/basketball2"/>

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/team2name"
                android:textSize="10sp"
                android:inputType="textMultiLine"
                android:text="Manchester United"
                android:textColor="@android:color/darker_gray"
                android:layout_width="68sp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:textAppearance="?attr/textAppearanceListItem" />

        </LinearLayout>



    </LinearLayout>

</FrameLayout>

        <View
            android:layout_marginTop="10sp"
            android:id="@+id/heder_seperator"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray" />


        <RelativeLayout
            android:paddingBottom="4sp"
            android:paddingTop="4sp"
            android:paddingRight="4sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/play"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play_arrow_black_24dp"/>

            <TextView
                android:layout_toRightOf="@+id/play"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Match"/>

            <ImageView
                android:layout_toLeftOf="@+id/play1"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_refresh_black_24dp"/>

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/play1"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refresh"/>

        </RelativeLayout>

        </LinearLayout>



    </android.support.v7.widget.CardView>
</LinearLayout>
