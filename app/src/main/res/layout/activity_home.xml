<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sachinmalik.sports.Home">

    <include
        android:id="@+id/app_lay"
        layout="@layout/app_bar"/>

    <FrameLayout
        android:layout_below="@+id/app_lay"
        android:id="@+id/your_placehodler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fancy:fb_text="Click here"
        fancy:fb_textColor="@color/button_color"
        fancy:fb_borderWidth="1dp"
        fancy:fb_borderColor="@color/button_color"
        android:paddingBottom="16dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:paddingTop="16dp"
        fancy:fb_defaultColor="#ffffff"
        fancy:fb_focusColor="@color/abs__background_holo_dark"
        fancy:fb_radius="50dp"
        fancy:fb_ghost="true"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="89dp"
        android:layout_marginStart="89dp" />




</RelativeLayout>
